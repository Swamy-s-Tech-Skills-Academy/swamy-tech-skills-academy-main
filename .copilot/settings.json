{
    "schemaVersion": "1.0",
    "instructions": {
        "paths": [
            ".github/copilot-instructions.md"
        ]
    },
    "environment": {
        "os": "windows",
        "shell": "pwsh"
    },
    "workspace": {
        "analyze": [
            "README.md",
            "01_ReferenceLibrary/**/*.md",
            "02_LegacyContent/COMPREHENSIVE_MIGRATION_PLAN.md",
            "02_LegacyContent/MIGRATION_AUDIT_2025-09-05.md",
            "02_LegacyContent/REPOSITORY_ULTRA_SIMPLIFICATION_COMPLETE.md",
            ".github/**/*.md"
        ],
        "exclude": [
            "02_LegacyContent/_Backup/**",
            "02_LegacyContent/02_Planning-and-Development/**",
            "02_LegacyContent/05_Todos/**",
            "02_LegacyContent/Daily-Migration-Tracker.md",
            "02_LegacyContent/Workspace-Deep-Dive-Report.md",
            "02_LegacyContent/WORKSPACE_CONFIGURATION_UPDATE.md",
            "**/node_modules/**",
            "**/.venv/**",
            "**/.vscode/**",
            "**/.git/**",
            "**/.copilot_tmp/**"
        ]
    },
    "commands": {
        "docs:lint": {
            "run": "npx --yes markdownlint-cli2 \"README.md\" \"01_ReferenceLibrary/**/*.md\" \"02_LegacyContent/COMPREHENSIVE_MIGRATION_PLAN.md\" \"02_LegacyContent/MIGRATION_AUDIT_2025-09-05.md\" \"02_LegacyContent/REPOSITORY_ULTRA_SIMPLIFICATION_COMPLETE.md\" \".github/**/*.md\"",
            "description": "Run Markdown lint for all active docs"
        },
        "links:check": {
            "run": "docker run --rm -v \"${PWD}:/workspace\" -w /workspace lycheeverse/lychee --config lychee.toml --no-progress README.md 01_ReferenceLibrary/**/*.md 02_LegacyContent/COMPREHENSIVE_MIGRATION_PLAN.md 02_LegacyContent/MIGRATION_AUDIT_2025-09-05.md 02_LegacyContent/REPOSITORY_ULTRA_SIMPLIFICATION_COMPLETE.md .github/**/*.md",
            "description": "Validate links using Lychee via Docker"
        },
        "workspace:health": {
            "run": "Get-ChildItem -Path . -Recurse -Name '*00_*' | Where-Object { $_ -notlike '*\\.git*' -and $_ -notlike '*02_LegacyContent*' }",
            "description": "Check for 00_ prefix violations (excluding legacy content)"
        },
        "workspace:structure": {
            "run": "Get-ChildItem -Path . -Directory -Name | Where-Object { $_ -match '^\\d+_' } | Sort-Object",
            "description": "Show current workspace folder structure"
        },
        "prompts:validate": {
            "run": "Get-ChildItem -Path .github/prompts/*.md | ForEach-Object { Write-Host \"Validating: $($_.Name)\"; npx --yes markdownlint-cli2 $_.FullName }",
            "description": "Validate all prompt files for markdown compliance"
        },
        "migration:status": {
            "run": "if (Test-Path '02_LegacyContent/COMPREHENSIVE_MIGRATION_PLAN.md') { Write-Host 'Migration plan found'; Get-Content '02_LegacyContent/COMPREHENSIVE_MIGRATION_PLAN.md' | Select-String -Pattern 'ðŸš€|âœ…|âš¡|ðŸ”„' | Select-Object -First 10 } else { Write-Host 'No migration plan found' }",
            "description": "Check current migration plan status and progress"
        }
    }
}